<div class = "container">
    <form action="/update2/<%=@one_post.id%>" method="GET">
        <div class ="form-group">
            <label for ="title">제목</label>
            <input name="title" value="<%=@one_post.title%>" type="text" class="form-control" id="title" placeholder="제목을 써 주세요.">
        </div>
        <div class ="form-group">
            <label for ="content">내용</label>
            <textarea name="content" type="text" class="form-control" row"7" id="content"><%=@one_post.content%></textarea>
        </div>
        
      

   <div class ="form-group">
           <label for ="tag_list">태그</label>
           <input name="tag_list" value="<%=@one_post.tag_list%>" type="text" class="form-control" id="title" placeholder="#태그">
        </div>
     <div class ="form-group">
            <label for ="image">이미지</label>
            <input name="image" value="<%=@one_post.image%>" type="text" class="form-control" row"1" id="content" placeholder="이미지 이름만 써 주세요. .jpg는 생략">
        </div>
        
        <div class ="form-group">
        <button type="submit" class="btn btn-default" style="margin-top:20px">전송</button>
        </div>
    </form>
</div>